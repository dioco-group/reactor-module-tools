{
  "name": "reactor-module-tools",
  "version": "1.0.0",
  "description": "Tools for creating and converting language learning modules for Language Reactor",
  "type": "module",
  "scripts": {
    "convert": "node module-convert/convert-course.js",
    "convert:fsi-french": "node module-convert/convert-course.js --config configs/fsi-french/module-convert.json",
    "convert:alc-english": "node module-convert/convert-course.js --config configs/alc-english/module-convert.json",
    "extract:fsi-french": "node pdf-extract/extract-markdown.js configs/fsi-french/pdf-extract.json",
    "extract:alc-english": "node pdf-extract/extract-markdown.js configs/alc-english/pdf-extract.json",
    "generate-images:fsi-french": "node pdf-extract/generate-images.js configs/fsi-french/pdf-extract.json",
    "generate-images:alc-english": "node pdf-extract/generate-images.js configs/alc-english/pdf-extract.json"
  },
  "keywords": [
    "language-learning",
    "gemini",
    "module-converter",
    "pdf-extraction"
  ],
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google/genai": "^1.0.0",
    "dotenv": "^16.0.0",
    "pdf-lib": "^1.17.1"
  }
}
